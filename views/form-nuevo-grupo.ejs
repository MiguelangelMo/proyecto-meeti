<main class="contenedor contenedor-formularios no-padding">
    <h1><%=title%></h1>
    <form action="/nuevo-grupo" class="default-form" method="POST" enctype="multipart/form-data" >
        <div class="campo">
            <label for="nombre">Nombre del grupo</label>
            <input type="text" name="nombre" id="nombre" placeholder="Nuevo Grupo" />
        </div>
        <h2>Descripción del Grupo</h2>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="categoria">Categoría</label>
            <select name="categoria" id="categoria">
                <option value="" disabled="disabled" selected> -- SELECCIONA --</option>
                <% if(categoria.length) { %>
                <% categoria.map(cat =>  {%>
                    <option value="<%=cat.id%>"><%=cat.nombre%></option>
                <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label for="imagen">Imagen del grupo</label>
            <input type="file" name="imagen" id="imagen" />
        </div>
        <div class="campo">
            <label for="url">Sitio Web</label>
            <input type="url" name="url" id="url" placeholder="Sitio Web" />
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-azul" value="Guardar Grupo" />
        </div>
    </form>
</main>